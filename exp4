import numpy as np

sig = lambda x: 1/(1+np.exp(-x))
dsig = lambda x: x*(1-x)

X = np.array([[0,0],[0,1],[1,0],[1,1]])
y = np.array([[0],[0],[0],[1]])

np.random.seed(1)
w1, w2 = np.random.rand(2,2), np.random.rand(2,1)

for _ in range(10000):
    h = sig(X @ w1)
    o = sig(h @ w2)
    w2 += h.T @ ((y-o)*dsig(o)) * 0.5
    w1 += X.T @ (((y-o)*dsig(o)) @ w2.T * dsig(h)) * 0.5

print(o.round())

output:
[[0.]
 [0.]
 [0.]
 [1.]]
